{
    "name": "lucasbustamante/stubz",
    "description": "A command-line PHP stub generator using BetterReflection.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Lucas Bustamante",
            "email": "lucasfbustamante@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Stubz\\": "src/"
        }
    },
    "require": {
        "php": "^8.2",
        "roave/better-reflection": "^6.0",
        "symfony/finder": "^6.0",
